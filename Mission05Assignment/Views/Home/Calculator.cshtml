@{
    ViewData["Title"] = "Guitar Lessons Calculator";
}

<div class="container">
    <h1>Guitar Lessons Cost Calculator</h1>

    <label for="hours">Enter hours of teaching needed:</label>
    <input type="number" id="hours" min="1" class="form-control" /><br/>

    <label>Hourly Rate:</label>
    <input type="text" id="rate" class="form-control" value="30" readonly /><br/>

<button id="calculate-btn" class="btn btn-success">Calculate Total</button><br/><br/>

    <h3>Total Cost: <span id="total-cost">$0</span></h3><br/>

    <a class="btn btn-secondary" href="@Url.Action("Index", "Home")">Back to Home</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/calculator.js"></script>