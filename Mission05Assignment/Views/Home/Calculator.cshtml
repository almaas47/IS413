@{
    ViewData["Title"] = "Photography Tutoring Calculator";
}

<div class="container">
    <h1>Photography Tutoring Cost Calculator</h1>

    <label for="hours">Enter hours of tutoring needed:</label>
    <input type="number" id="hours" min="1" class="form-control" />

    <label>Hourly Rate:</label>
    <input type="text" id="rate" class="form-control" value="30" readonly />

<button id="calculate-btn" class="btn btn-success">Calculate Total</button>

    <h3>Total Cost: <span id="total-cost">$0</span></h3>

    <a class="btn btn-secondary" href="@Url.Action("Index", "Home")">Back to Home</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/calculator.js"></script>